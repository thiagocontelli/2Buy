<?xml version="1.0" encoding="UTF-8" ?>
<?xaml-comp compile="true" ?>
<ResourceDictionary 
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml">

    <Style TargetType="Shell" ApplyToDerivedTypes="True">
        <Setter Property="Shell.BackgroundColor" Value="White" />
    </Style>

    <Style TargetType="Button">
        <Setter Property="BackgroundColor" Value="{StaticResource Primary}" />
        <Setter Property="FontAttributes" Value="Bold" />
        <Setter Property="BorderColor" Value="{StaticResource Blue600}" />
        <Setter Property="BorderWidth" Value="1" />
        <Setter Property="HeightRequest" Value="50" />
        <Setter Property="CornerRadius" Value="8" />
        <Setter Property="FontFamily" Value="InterRegular" />
    </Style>

    <Style TargetType="Frame">
        <Setter Property="HasShadow" Value="False" />
        <Setter Property="BorderColor" Value="{StaticResource Gray100}" />
        <Setter Property="CornerRadius" Value="8" />
        <Setter Property="Padding" Value="16" />
    </Style>

    <Style TargetType="CheckBox">
        <Setter Property="Color" Value="{StaticResource Green300}" />
    </Style>

    <Style TargetType="Label">
        <Setter Property="FontFamily" Value="InterRegular" />
    </Style>
</ResourceDictionary>
